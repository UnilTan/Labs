<Window x:Class="MilkProductsBinding.DetailDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали продукта" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Артикул -->
        <TextBlock Grid.Row="0" Text="Артикул" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="Blue" Margin="0,5"/>
        <TextBox Grid.Row="1" x:Name="txtArticul" 
                 FontSize="14" Height="30" 
                 IsReadOnly="True" Margin="0,0,0,10"/>

        <!-- Наименование -->
        <TextBlock Grid.Row="2" Text="Наименование" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="Blue" Margin="0,5"/>
        <TextBox Grid.Row="3" x:Name="txtName" 
                 FontSize="14" Height="30" 
                 IsReadOnly="True" Margin="0,0,0,10"/>

        <!-- Цена -->
        <TextBlock Grid.Row="4" Text="Цена" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="Blue" Margin="0,5"/>
        <TextBox Grid.Row="5" x:Name="txtPrice" 
                 FontSize="14" Height="30" 
                 IsReadOnly="True" Margin="0,0,0,10"/>

        <!-- Количество -->
        <TextBlock Grid.Row="6" Text="Количество" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="Blue" Margin="0,5"/>
        <TextBox Grid.Row="7" x:Name="txtQuantity" 
                 FontSize="14" Height="30" 
                 IsReadOnly="True" Margin="0,0,0,10"/>

        <!-- Кнопка закрыть -->
        <Button Grid.Row="9" Content="Закрыть" 
                Click="CloseButton_Click"
                Height="35" Width="100" 
                HorizontalAlignment="Center"
                Background="LightCoral" 
                FontWeight="Bold"/>
    </Grid>
</Window>