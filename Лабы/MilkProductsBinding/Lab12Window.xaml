<Window x:Class="MilkProductsBinding.Lab12Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная работа 12 - DataGrid, ComboBox, ListView" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="ЛР-12: DataGrid с привязками, ComboBox-столбцы, ListView" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"
                   Background="LightBlue" Padding="10"/>

        <!-- Верхняя часть: DataGrid с продуктами и DataGrid с деталями продаж -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 1. DataGrid с продуктами (простая привязка) -->
            <GroupBox Grid.Column="0" Header="1. DataGrid - Продукты (редактируемый)" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dtProduct" Grid.Row="0" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="True" 
                              CanUserDeleteRows="True"
                              SelectionMode="Single"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                                Binding="{Binding idProduct}" 
                                                IsReadOnly="True" Width="50"/>
                            <DataGridTextColumn Header="Наименование" 
                                                Binding="{Binding nameProduct, Mode=TwoWay}" 
                                                Width="150"/>
                            <DataGridTextColumn Header="Цена" 
                                                Binding="{Binding priceProduct, Mode=TwoWay}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Категория" 
                                                Binding="{Binding Category, Mode=TwoWay}" 
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="1" Content="Сохранить изменения в продуктах" 
                            Click="SaveProductChanges_Click" 
                            Margin="5" Height="30" 
                            Background="LightGreen"/>
                </Grid>
            </GroupBox>

            <!-- 2. DataGrid с деталями продаж и ComboBox-столбцом -->
            <GroupBox Grid.Column="1" Header="2. DataGrid - Детали продаж (с ComboBox-столбцом)" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dtDetailSale" Grid.Row="0" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="True" 
                              CanUserDeleteRows="True"
                              SelectionMode="Single"
                              Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Детали" 
                                                Binding="{Binding IdDetailSale}" 
                                                IsReadOnly="True" Width="70"/>
                            <DataGridTextColumn Header="ID Продажи" 
                                                Binding="{Binding IdSale, Mode=TwoWay}" 
                                                Width="80"/>
                            
                            <!-- ComboBox-столбец для выбора продукта -->
                            <DataGridComboBoxColumn Header="Продукт" 
                                                    x:Name="cmbIdPrSale"
                                                    DisplayMemberPath="nameProduct"
                                                    SelectedValuePath="idProduct"
                                                    SelectedValueBinding="{Binding IdProductDetailSale, Mode=TwoWay}"
                                                    Width="120"/>
                            
                            <DataGridTextColumn Header="Количество" 
                                                Binding="{Binding QuantityProduct, Mode=TwoWay}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Цена за ед." 
                                                Binding="{Binding UnitPrice, Mode=TwoWay}" 
                                                Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Grid.Row="1" Content="Сохранить изменения в деталях продаж" 
                            Click="SaveDetailSaleChanges_Click" 
                            Margin="5" Height="30" 
                            Background="LightCoral"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Нижняя часть: ListView -->
        <GroupBox Grid.Row="2" Header="3. ListView - Каталог товаров в виде плиток (карточек)" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Фильтр для ListView -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Фильтр по категории:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbCategoryFilter" Width="150" 
                              SelectionChanged="CategoryFilter_SelectionChanged"/>
                    <Button Content="Показать все" Click="ShowAllProducts_Click" 
                            Margin="10,0,0,0" Padding="10,2"/>
                </StackPanel>

                <ListView x:Name="lvProducts" Grid.Row="1" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Margin="5">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightYellow" 
                                    BorderBrush="DarkBlue" 
                                    BorderThickness="2" 
                                    CornerRadius="10" 
                                    Margin="5" 
                                    Padding="10"
                                    Width="200" 
                                    Height="150">
                                <StackPanel>
                                    <TextBlock Text="{Binding nameProduct}" 
                                               FontWeight="Bold" 
                                               FontSize="14" 
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="{Binding priceProduct, StringFormat='Цена: {0:C}'}" 
                                               FontSize="12" 
                                               Foreground="DarkGreen"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,3"/>
                                    
                                    <TextBlock Text="{Binding Category, StringFormat='Категория: {0}'}" 
                                               FontSize="10" 
                                               Foreground="DarkBlue"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,3"/>
                                    
                                    <TextBlock Text="{Binding ExpiryDays, StringFormat='Срок: {0} дней'}" 
                                               FontSize="10" 
                                               Foreground="DarkRed"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="9" 
                                               Foreground="Gray"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center"
                                               MaxHeight="30"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </GroupBox>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Content="Загрузить данные" Click="LoadData_Click" 
                    Margin="5" Padding="15,5" Background="LightBlue"/>
            <Button Content="Обновить ListView" Click="RefreshListView_Click" 
                    Margin="5" Padding="15,5" Background="LightGreen"/>
            <Button Content="Добавить тестовый продукт" Click="AddTestProduct_Click" 
                    Margin="5" Padding="15,5" Background="Yellow"/>
            <Button Content="Закрыть" Click="Close_Click" 
                    Margin="5" Padding="15,5" Background="LightCoral"/>
        </StackPanel>

        <!-- Статус -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="Готов к работе с ЛР-12"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>