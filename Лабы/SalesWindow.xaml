<Window x:Class="MilkProductsCatalog.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Продажи" 
        Height="560" 
        Width="820"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Label Grid.Row="0" 
               Content="Продажи" 
               FontFamily="Microsoft Sans Serif" 
               FontSize="16" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               Margin="0,0,0,10"/>
        
        <!-- Таблица данных -->
        <DataGrid Grid.Row="1" 
                  Name="SalesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SaleId" Binding="{Binding SaleId}" Width="80"/>
                <DataGridTextColumn Header="SaleDate" Binding="{Binding SaleDate}" Width="150"/>
                <DataGridTextColumn Header="CustomerName" Binding="{Binding CustomerName}" Width="200"/>
                <DataGridTextColumn Header="TotalAmount" Binding="{Binding TotalAmount}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,10">
            
            <Button Name="btnSortByDate" 
                    Content="Сорт. по дате" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSortByAmount" 
                    Content="Сорт. по сумме" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSearchCustomer" 
                    Content="Поиск клиента" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <TextBox Name="txtSearchCustomer" 
                     Width="200" 
                     Height="23" 
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Статистика по суммам -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Поля статистики -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Максимальная:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMaxAmount" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Минимальная:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMinAmount" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Средняя:" Width="102" FontSize="10"/>
                    <TextBox Name="txtAvgAmount" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Кнопка вычисления -->
            <Button Grid.Column="1" 
                    Name="btnCalculate" 
                    Content="Вычислить" 
                    Width="100" 
                    Height="30" 
                    VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>