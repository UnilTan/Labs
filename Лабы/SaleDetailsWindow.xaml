<Window x:Class="MilkProductsCatalog.SaleDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали продаж" 
        Height="560" 
        Width="820"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Label Grid.Row="0" 
               Content="Детали продаж" 
               FontFamily="Microsoft Sans Serif" 
               FontSize="16" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               Margin="0,0,0,10"/>
        
        <!-- Таблица данных -->
        <DataGrid Grid.Row="1" 
                  Name="SaleDetailsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SaleDetailId" Binding="{Binding SaleDetailId}" Width="90"/>
                <DataGridTextColumn Header="SaleId" Binding="{Binding SaleId}" Width="70"/>
                <DataGridTextColumn Header="ProductName" Binding="{Binding ProductName}" Width="150"/>
                <DataGridTextColumn Header="CustomerName" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="UnitPrice" Binding="{Binding UnitPrice}" Width="90"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,10">
            
            <Button Name="btnSortByQuantity" 
                    Content="Сорт. по количеству" 
                    Width="150" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSearchProduct" 
                    Content="Поиск товара" 
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <TextBox Name="txtSearchProduct" 
                     Width="200" 
                     Height="23" 
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Статистика по количеству -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Поля статистики -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Максимальное:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMaxQuantity" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Минимальное:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMinQuantity" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Среднее:" Width="102" FontSize="10"/>
                    <TextBox Name="txtAvgQuantity" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Кнопка вычисления -->
            <Button Grid.Column="1" 
                    Name="btnCalculate" 
                    Content="Вычислить" 
                    Width="100" 
                    Height="30" 
                    VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>