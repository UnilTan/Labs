<Window x:Class="MilkProductsImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MilkProductsImages"
        Title="ЛР-14 Часть 2: Изображения в БД (varbinary)" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Конвертеры для работы с Visibility -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="ЛР-14 Часть 2: Работа с изображениями в БД (varbinary(max))" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>
        
        <!-- DataGrid с продуктами и изображениями из БД -->
        <GroupBox Grid.Row="1" Header="Продукты с изображениями в БД" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DataGrid x:Name="dgProducts" Grid.Row="0" AutoGenerateColumns="False" 
                          CanUserAddRows="False" IsReadOnly="True" Margin="5"
                          RowHeight="100" SelectionChanged="dgProducts_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdProduct}" Width="50"/>
                        
                        <!-- Столбец с изображением из БД -->
                        <DataGridTemplateColumn Header="Изображение из БД" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="2">
                                        <Grid>
                                            <!-- Изображение, если есть -->
                                            <Image Source="{Binding ImageSource}" 
                                                   Width="90" Height="90" 
                                                   Stretch="UniformToFill"/>
                                            
                                            <!-- Заглушка, если нет изображения -->
                                            <TextBlock Text="НЕТ&#x0A;ФОТО" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"
                                                       FontSize="10" FontWeight="Bold"
                                                       Foreground="Gray"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Наименование" Binding="{Binding NameProduct}" Width="180"/>
                        <DataGridTextColumn Header="Цена" Binding="{Binding PriceProduct, StringFormat=F2}" Width="80"/>
                        <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="120"/>
                        <DataGridTextColumn Header="Статус изображения" Binding="{Binding ImageStatus}" Width="200"/>
                        <DataGridTextColumn Header="Имя файла" Binding="{Binding ImageFileName}" Width="150"/>
                        <DataGridTextColumn Header="Размер" Binding="{Binding ImageSizeFormatted}" Width="100"/>
                        <DataGridCheckBoxColumn Header="Есть в БД" Binding="{Binding HasImageInDatabase}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                    <Button x:Name="btnLoadProducts" Content="Загрузить продукты" Click="btnLoadProducts_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnLoadImage" Content="Загрузить изображение" Click="btnLoadImage_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnSaveImage" Content="Сохранить изображение" Click="btnSaveImage_Click" Margin="0,0,10,0"/>
                    <Button x:Name="btnDeleteImage" Content="Удалить изображение" Click="btnDeleteImage_Click" Margin="0,0,10,0"/>
                    <TextBlock x:Name="tbInfo" VerticalAlignment="Center" Foreground="Blue"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Панель управления изображениями -->
        <GroupBox Grid.Row="2" Header="Управление изображениями" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Массовая загрузка изображений:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button x:Name="btnLoadAllImages" Content="Загрузить все изображения из папки" 
                            Click="btnLoadAllImages_Click" Height="30" Margin="0,0,0,5"/>
                    <TextBlock x:Name="tbLoadProgress" Text="Готов к загрузке" FontSize="10" Foreground="Gray"/>
                </StackPanel>
                
                <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                
                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Text="Экспорт изображений:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Button x:Name="btnExportAllImages" Content="Экспортировать все изображения" 
                            Click="btnExportAllImages_Click" Height="30" Margin="0,0,0,5"/>
                    <TextBlock x:Name="tbExportProgress" Text="Готов к экспорту" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Детальный просмотр выбранного продукта -->
        <GroupBox Grid.Row="3" Header="Детальный просмотр выбранного продукта">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Большое изображение из БД -->
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="2" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Width="180" Height="180">
                        <!-- Изображение -->
                        <Image x:Name="imgSelectedProduct" 
                               Stretch="UniformToFill"/>
                        
                        <!-- Заглушка -->
                        <TextBlock x:Name="tbNoImage" Text="НЕТ ИЗОБРАЖЕНИЯ В БД" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   FontSize="12" FontWeight="Bold"
                                   Foreground="Gray" TextAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Информация о продукте -->
                <StackPanel Grid.Column="1" Margin="20,0,0,0">
                    <TextBlock x:Name="tbSelectedName" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="tbSelectedPrice" FontSize="12" Margin="0,0,0,3"/>
                    <TextBlock x:Name="tbSelectedCategory" FontSize="11" Margin="0,0,0,3"/>
                    <TextBlock x:Name="tbSelectedDescription" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <Separator Margin="0,5"/>
                    <TextBlock Text="Информация об изображении в БД:" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                    <TextBlock x:Name="tbSelectedImageStatus" FontSize="10" Foreground="Blue" Margin="0,0,0,2"/>
                    <TextBlock x:Name="tbSelectedImageFileName" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                    <TextBlock x:Name="tbSelectedImageSize" FontSize="10" Foreground="Gray" Margin="0,0,0,2"/>
                    <TextBlock x:Name="tbSelectedImageType" FontSize="10" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
