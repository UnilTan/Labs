<Window x:Class="MilkProductsCatalog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог Молочных продуктов" 
        Height="560" 
        Width="820"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <Label Grid.Row="0" 
               Content="Каталог Молочных продуктов" 
               FontFamily="Microsoft Sans Serif" 
               FontSize="16" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               Margin="0,0,0,10"/>
        
        <!-- Таблица данных -->
        <DataGrid Grid.Row="1" 
                  Name="ProductsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}" Width="80"/>
                <DataGridTextColumn Header="ProductName" Binding="{Binding ProductName}" Width="150"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="ExpiryDays" Binding="{Binding ExpiryDays}" Width="80"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Первый ряд кнопок -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,10">
            
            <Button Name="btnPrice" 
                    Content="Цена" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSortAsc" 
                    Content="Сортировка по возр." 
                    Width="150" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSortDesc" 
                    Content="Сортировка по убыв." 
                    Width="150" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSearch" 
                    Content="Поиск" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <Label Content="Поиск по названию:" 
                       FontSize="10" 
                       Padding="0" 
                       Margin="0,0,0,2"/>
                <TextBox Name="txtSearch" 
                         Width="198" 
                         Height="23"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Статистика и поиск по символам -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Статистика по ценам -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,20,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Максимальная:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMaxPrice" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Минимальная:" Width="102" FontSize="10"/>
                    <TextBox Name="txtMinPrice" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Средняя:" Width="102" FontSize="10"/>
                    <TextBox Name="txtAvgPrice" Width="100" Height="23" IsReadOnly="True" Background="LightGray"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Поиск по символам -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,20,0">
                <Button Name="btnPartialSearch" 
                        Content="Поиск по символам" 
                        Width="150" 
                        Height="30" 
                        Margin="0,0,0,10"/>
                <StackPanel Orientation="Vertical">
                    <Label Content="Первые символы:" FontSize="10" Padding="0" Margin="0,0,0,2"/>
                    <TextBox Name="txtPartialSearch" Width="150" Height="23"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- Кнопки навигации -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            
            <Button Name="btnSales" 
                    Content="Продажи" 
                    Width="138" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnSaleDetails" 
                    Content="Детали продаж" 
                    Width="138" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            
            <Button Name="btnTestConnection" 
                    Content="Тест подключения" 
                    Width="138" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>