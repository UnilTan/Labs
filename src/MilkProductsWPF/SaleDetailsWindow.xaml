<Window x:Class="MilkProductsWPF.SaleDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали продаж" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Моя таблица - Детали продаж" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>
        
        <!-- Поля ввода -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Name="txtId" Grid.Column="0" Height="30" Margin="5" 
                     ToolTip="ID детали"/>
            <ComboBox Name="cmbSale" Grid.Column="1" Height="30" Margin="5" 
                      DisplayMemberPath="DisplayText" SelectedValuePath="SaleId"
                      ToolTip="Продажа"/>
            <ComboBox Name="cmbProduct" Grid.Column="2" Height="30" Margin="5" 
                      DisplayMemberPath="ProductName" SelectedValuePath="ProductId"
                      ToolTip="Продукт"/>
            <TextBox Name="txtQuantity" Grid.Column="3" Height="30" Margin="5" 
                     ToolTip="Количество"/>
            <TextBox Name="txtUnitPrice" Grid.Column="4" Height="30" Margin="5" 
                     ToolTip="Цена за единицу"/>
            
            <!-- GroupBox с кнопками -->
            <GroupBox Name="groupBox1" Grid.Column="5" Header="Операции" 
                      Background="LightBlue" Margin="5">
                <StackPanel Orientation="Vertical">
                    <Button Name="btnIns" Content="Ins" Height="30" Margin="5" 
                            Click="BtnIns_Click"/>
                    <Button Name="btnSave" Content="Save" Height="30" Margin="5" 
                            Click="BtnSave_Click"/>
                    <Button Name="btnDel" Content="Del" Height="30" Margin="5" 
                            Click="BtnDel_Click"/>
                    <Button Name="btnSort" Content="Sort" Height="30" Margin="5" 
                            Click="BtnSort_Click"/>
                    <Button Name="btnFind" Content="Find" Height="30" Margin="5" 
                            Click="BtnFind_Click"/>
                    <Button Name="btnFilter" Content="Filter" Height="30" Margin="5" 
                            Click="BtnFilter_Click"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        
        <!-- DataGrid -->
        <DataGrid Name="dataGrid" Grid.Row="2" Margin="10" 
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding SaleDetailId}" Width="50"/>
                <DataGridTextColumn Header="ID Продажи" Binding="{Binding SaleId}" Width="80"/>
                <DataGridTextColumn Header="Продукт" Binding="{Binding Product.ProductName}" Width="200"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Цена за ед." Binding="{Binding UnitPrice}" Width="100"/>
                <DataGridTextColumn Header="Покупатель" Binding="{Binding Sale.CustomerName}" Width="150"/>
                <DataGridTextColumn Header="Дата продажи" Binding="{Binding Sale.SaleDate, StringFormat=dd.MM.yyyy}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Поиск -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="FIND" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="txtSearch" Grid.Column="1" Height="30" Margin="5"/>
        </Grid>
        
        <!-- Нижние кнопки -->
        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Name="button7" Grid.Column="0" Content="Все детали" Height="40" Margin="5" 
                    Click="Button7_Click"/>
            <Button Name="button8" Grid.Column="1" Content="По продуктам" Height="40" Margin="5" 
                    Click="Button8_Click"/>
            <Button Name="button9" Grid.Column="2" Content="Большие объемы" Height="40" Margin="5" 
                    Click="Button9_Click"/>
            <Button Name="button10" Grid.Column="3" Content="Закрыть" Height="40" Margin="5" 
                    Click="Button10_Click"/>
        </Grid>
    </Grid>
</Window>